{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@language/*": ["src/language/*"],
      "@layout/*": ["src/layout/*"],
      "@skeleton": ["src/skeleton/index.tsx"],
      "@skeleton/*": ["src/skeleton/*"],
      "@lib/*": ["lib/*"],
      "@types": ["src/types/index.ts"],
      "@point/*": ["prisma/*"],
      "@pages/*": ["pages/*"],
      "@ui": ["src/ui/index.tsx"],
      "@formik": ["src/index.tsx"],
      "@auth": ["src/auth/index.tsx"],
    }
  },
  "include": ["next-env.d.ts", "custom.d.ts", "**/*.ts", "**/*.tsx", "**/*.mjs", "*/*.js", "*/*.js", "prisma/**/*.ts", "**/*.cjs"],
  "exclude": ["node_modules", "tmp"],
  "types": ["node", "pg", "module"],
}
